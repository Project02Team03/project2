<!-- This Recipe Search is when all ingredients are marked in_stock: true AND is_favorite: true  -->
<div class="card m-4 border-primary border-3 bg-success-subtle recipe_card favorited">
  <div class="position-relative">
    <div class="gradient-overlay ready"></div>
    <h5 class="card-title position-absolute start-0 bottom-0 text-white p-3">{{recipe_name}}</h5>
    <div class="d-flex img-container-card">
      <div class="bg-image" style="background-image: url('{{image_link}}');"></div>
    </div>
  </div>
  <div class="card-body">
    <h6 class="border-bottom pb-3">Ingredients</h6>
    <div class="overflow-auto inset-list">
      <ul class="list-group list-group-flush">
        <!-- This renders each ingredient -->
        {{#each ingredients as |ingredient|}}
          {{> ingredient-list}}
        {{/each}}
      </ul>
    </div>
    <!-- This button opens the recipe URL -->
    <div class="d-flex flex-wrap justify-content-center mt-3">
      <a href="{{recipe_url}}" class="btn btn-outline-success w-100 m-2">Ready to Cook!</a>
    </div>
  </div>
  <div class="card-footer bg-primary d-flex flex-wrap justify-content-between align-items-center">
    <!-- This button sets is_favorite: false -->
    <button type="submit" class="btn btn-sm btn-primary w-100" id="removeRecipe" data-recipe="{{recipe_id}}">
            Saved in Your Recipes!
            <i class="far fa-star fa-solid ps-5"></i>
          </button>
  </div>
</div>