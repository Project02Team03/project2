<!-- This Recipe Search is when all ingredients are marked in_stock: true AND is_favorite: false  -->
<div class="card m-4 border-info border-3 bg-success-subtle recipe_card favorited">
        <div class="position-relative">
          <div class="gradient-overlay ready"></div>
          <h5 class="card-title position-absolute start-0 bottom-0 text-white p-3">{{recipe_name}}</h5>
          <div class="d-flex img-container-card">
            <div class="bg-image" style="background-image: url('{{image_link}}');"></div>
          </div>
        </div>
        <div class="card-body">
          <h6 class="border-bottom pb-3">Ingredients</h6>
          <div class="overflow-auto inset-list">
            <ul class="list-group list-group-flush">
              <!-- This renders each ingredient -->
              {{#each ingredients}}
          {{#if this.in_stock}}
            <li class="list-group-item text-success">
              <div class="d-flex flex-wrap flex-row justify-content-between align-content-center">
                <p class="m-0">{{this.quantity}} {{this.measure}} {{this.food}}</p>
                <i class="d-flex flex-wrap fa-solid fa-circle-check text-success align-content-center"></i>
              </div>
            </li>
          {{else}}
              <li class="list-group-item text-dark">
                <div class="d-flex flex-wrap flex-row justify-content-between align-content-center">
                  <p class="m-0">{{this.quantity}} {{this.measure}} {{this.food}}</p>
                </div>
              </li>
          {{/if}}
        {{/each}}
            </ul>
          </div>
          <!-- This button opens the recipe URL -->
          <div class="d-flex flex-wrap justify-content-center mt-3">
            <a href="{{recipe_url}}" class="btn btn-outline-success w-100 m-2" role="button">Ready to Cook!</a>
          </div>
        </div>
        <div class="card-footer bg-success-subtle d-flex flex-wrap justify-content-between align-items-center">
        <!-- This button sets is_favorite: true -->
        <button type="submit" class="btn btn-sm btn-outline-primary w-100" id="saveRecipe" data-recipe="{{id}}">
            Add to your favorites?
            <i class="far fa-star text-primary ps-5"></i>
          </button>
        </div>
      </div>