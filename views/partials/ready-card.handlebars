<div class="card m-4 border-info border-3 bg-success-subtle recipe_card favorited">
        <div class="position-relative">
          <div class="gradient-overlay ready"></div>
          <h5 class="card-title position-absolute start-0 bottom-0 text-white p-3">{{title}}</h5>
          <img src="{{recipe.image-url}}" class="card-img-top" alt="{{title}}">
        </div>
        <div class="card-body">
          <h6 class="border-bottom pb-3">Ingredients</h6>
          <div class="overflow-auto inset-list">
            <ul class="list-group list-group-flush">
              {{#each ingredients as |ingredients|}}
                {{> ingredient-list}}
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-wrap justify-content-center mt-3">
            <a href="/recipe/{{$id}}" class="btn btn-outline-success w-100 m-2">Ready to Cook!</a>
          </div>
        </div>
        <div class="card-footer bg-success-subtle d-flex flex-wrap justify-content-between align-items-center">
        <a href="#" class="btn-sm">
          <p class="text-success m-0">Save to your favorites?</p>
            <i class="far fa-star text-success"></i>
          </a>
        </div>
      </div>