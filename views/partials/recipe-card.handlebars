<div class="card m-4 border-info border-3 recipe_card">
        <div class="position-relative">
          <div class="gradient-overlay"></div>
          <h5 class="card-title position-absolute start-0 bottom-0 text-white p-3">{{recipe_name}}</h5>
          <div class="d-flex img-container-card">
            <div class="bg-image" style="background-image: url('{{image_link}}');"></div>
          </div>
        </div>
        <div class="card-body">
          <h6 class="border-bottom pb-3">Ingredients</h6>
          <div class="overflow-auto inset-list">
            <ul class="list-group list-group-flush">
              {{#each ingredients as |ingredients|}}
                {{> ingredient-list}}
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-wrap justify-content-center mt-3">
            <button type="button" class="btn btn-info w-100 m-2" data-toggle="modal" data-target="#recipeModal">
                View Recipe
              </button>
          </div>
        </div>
        <div class="card-footer bg-light-subtle d-flex flex-wrap justify-content-between align-items-center">
            <a href="#" class="btn-sm"></a>
            <p class="text-info m-0">Save to your Recipes?</p>
            <i class="far fa-star text-info"></i>
          </a>
        </div>
      </div>