<!-- This Recipe Search is when any ingredient is marked in_stock: false AND is_favorite: false  -->
<div class="card m-4 border-info border-3 recipe_card">
        <div class="position-relative">
          <div class="gradient-overlay"></div>
          <h5 class="card-title position-absolute start-0 bottom-0 text-white p-3">{{recipe_name}}</h5>
          <div class="d-flex img-container-card">
            <div class="bg-image" style="background-image: url('{{image_link}}');"></div>
          </div>
        </div>
        <div class="card-body">
          <h6 class="border-bottom pb-3">Ingredients</h6>
          <div class="overflow-auto inset-list">
            <ul class="list-group list-group-flush">
              <!-- This renders each ingredient -->
              
                {{> ingredient-list}}
            
            </ul>
          </div>
          <div class="d-flex flex-wrap justify-content-center mt-3">
            <!-- This button opens the recipe-detail page -->
            <a href="api/recipes/{{id}}" type="button" class="btn btn-info w-100 m-2">
                View Recipe
              </a>
          </div>
        </div>
        <!-- Only authorized users can add to saved-recipes -->
        {{#if logged_in}}
        <div class="card-footer bg-light-subtle d-flex flex-wrap justify-content-between align-items-center">
            <!-- This button sets is_favorite: true -->
            <button type="submit" class="btn btn-sm btn-outline-primary w-100" id="saveRecipe" data-recipe="{{id}}">
            Add to your favorites?
            <i class="far fa-star text-primary ps-5"></i>
          </button>
          </a>
        </div>
        {{/if}}
      </div>