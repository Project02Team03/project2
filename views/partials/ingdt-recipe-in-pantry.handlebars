{{#if note}}
<div class="card border-success bg-success-subtle mx-3 mb-1">
    <div class="row g-0">
        <div class="col-xl-9 col-lg-7 col-md-6 col-sm-12">
            <div class="d-flex justify-content-center position-relative">

                <div class="d-flex img-container">
                    <div class="d-flex justify-content-center align-items-center have-it"><i
                            class="fa-solid fa-circle-check fa-2xl text-white"></i></div>
                    <div class="bg-image" style="background-image: url('{{ingredient_img}}');"></div>
                </div>
                <div class="d-flex flex-row justify-content-start align-items-center w-100">
                    <div class="d-flex flex-row align-items-center">
                        <div class="card-body">
                            <h6 class="card-title m-0 p-3 p-sm-1 text-body-tertiary">{{amount}} {{units}}
                                {{ingredient_name}}</h6>
                            <div class="d-flex flex-row">
                                    <p class="card-text m-0 p-3 p-sm-1 pt-1 ">{{note}}</p>
                                    <button class="btn btn-sm btn-outline-dark justify-content-start" type="submit"><i
                                            class="fa-solid fa-comment"></i></button>
                                </div>
                        </div>
                        <button class="btn btn-sm btn-dark justify-content-start" type="submit"><i
                                class="fa-solid fa-comment"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div
            class="col-xl-3 col-lg-5 col-md-6 col-sm-12 d-flex justify-content-md-end justify-content-center align-items-center">
            <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex btn-container">
                    <button class="btn btn-dark mx-2 my-1 ing-btn" type="submit" id="remove-ing"><i
                            class="fa-solid fa-xmark"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="card border-success bg-success-subtle mx-3 mb-1">
    <div class="row g-0">
        <div class="col-xl-9 col-lg-7 col-md-6 col-sm-12">
            <div class="d-flex justify-content-center position-relative">

                <div class="d-flex img-container">
                    <div class="d-flex justify-content-center align-items-center have-it"><i
                            class="fa-solid fa-circle-check fa-2xl text-white"></i></div>
                    <div class="bg-image" style="background-image: url('{{ingredient_img}}');"></div>
                </div>
                <div class="d-flex flex-row justify-content-start align-items-center w-100">
                    <div class="d-flex flex-row align-items-center">
                        <div class="card-body">
                            <h6 class="card-title m-0 p-3 p-sm-1 text-body-tertiary">{{amount}} {{units}}
                                {{ingredient_name}}</h6>
                        </div>
                        <button class="btn btn-sm btn-dark justify-content-start" type="submit"><i
                                class="fa-solid fa-comment"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div
            class="col-xl-3 col-lg-5 col-md-6 col-sm-12 d-flex justify-content-md-end justify-content-center align-items-center">
            <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex btn-container">
                    <button class="btn btn-dark mx-2 my-1 ing-btn" type="submit" id="remove-ing"><i
                            class="fa-solid fa-xmark"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

